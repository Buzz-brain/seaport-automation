<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cargo Tracking</title>
    <style>
        /* General Styling */

        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap');

        * {
            font-family: "Poppins", sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;

        }

        /* Body Styling */
        body {
            background-color: #f0f4f8;
            color: #333;
        }

        /* Header Styling */
        header {
            background-color: #2c3e50;
            color: #fff;
            text-align: center;
            padding: 1rem 0;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        header h1 {
            font-size: 2rem;
        }

        /* Search Bar Section */
        .search-bar {
            display: flex;
            justify-content: center;
            margin: 2rem;
        }

        .search-bar input {
            width: 50%;
            padding: 0.8rem;
            border: 1px solid #ccc;
            border-radius: 8px 0 0 8px;
            outline: none;
        }

        .search-bar button {
            padding: 0.8rem 1.5rem;
            border: none;
            background-color: #2c3e50;
            color: #fff;
            border-radius: 0 8px 8px 0;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .search-bar button:hover {
            background-color: #1a252f;
        }

        /* Tracking Results Section */
        .tracking-results {
            margin: 2rem auto;
            width: 90%;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
            padding: 1.5rem;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            text-align: left;
        }

        thead {
            background-color: #2c3e50;
            color: #fff;
        }

        th,
        td {
            padding: 1rem;
            border-bottom: 1px solid #ccc;
        }

        tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tbody tr:hover {
            background-color: #f1f1f1;
        }

        .update-location,
        .update-customs-status {
            margin: 2rem 0;
            width: 30%;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
            padding: 1.5rem;
            text-align: center;
            position: sticky;
            left: 100%;
            bottom: 0;
        }

        .update-customs-status {
            left: 0%;

        }


        .update-location h2 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .update-form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .update-form input,
        .update-form select,
        .update-form button {
            width: 80%;
            padding: 0.8rem;
            margin: 0.5rem 0;
            border-radius: 8px;
            border: 1px solid #ccc;
        }

        .update-form button {
            background-color: #2c3e50;
            color: #fff;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .update-form button:hover {
            background-color: #1a252f;
        }

        .backBtn:hover {
            background-color: transparent;
            color: white;
            transition: all 0.3s ease-in-out
        }
    </style>
</head>

<body>
    <header style="display: flex; justify-content: space-around;">
        <h1>Cargo Tracking</h1>
        <button class="backBtn" style="border: 1px solid white; padding: 10px 30px; border-radius: 10px; cursor: pointer; font-size: 1.1rem;" onclick="goBack()">Logout</button>
    </header>
    <main class="cargo-tracking">
        <section class="search-bar">
            <input type="text" id="cargoSearch" placeholder="Enter Cargo ID or Content">
            <button id="searchButton">Search</button>
        </section>
        <section class="tracking-results">
            <table>
                <thead>
                    <tr>
                        <th>Cargo ID</th>
                        <th>CONTENT</th>
                        <th>SIZE</th>
                        <th>STORAGE CONDITION</th>
                        <th>CURRENT LOCATION</th>
                        <th>CUSTOM STATUS</th>
                        <th>LAST UPDATED</th>
                        <th>MOVEMENT HISTORY</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </section>


    </main>
    <!-- Update Location Section -->
    <section class="update-location">
        <p>RFID/Cargo tracking Simulator</p><br>
        <h2>Update Cargo Location</h2>
        <div class="update-form">
            <input type="text" id="updateCargoId" placeholder="Enter Cargo ID">
            <select id="newLocation">
                <option value="" disabled selected>Select New Location</option>
                <option value="Point A">Point A</option>
                <option value="Point B">Point B</option>
                <option value="Point C">Point C</option>
                <option value="Point D">Point D</option>
                <option value="Exit">Exit</option>
            </select>
            <button id="updateButton">Update Location</button>
        </div>
    </section>

    <!-- Update Customs Status Section -->
    <section class="update-customs-status">
        <p>Customs Status Simulator</p><br>
        <h2>Update Customs Status</h2>
        <div class="update-form">
            <input type="text" id="updateCargoIdCustoms" placeholder="Enter Cargo ID">
            <select id="newCustomsStatus">
                <option value="" disabled selected>Select New Customs Status</option>
                <option value="cleared">Cleared</option>
                <option value="pending">Pending</option>
                <option value="rejected">Rejected</option>
            </select>
            <button id="updateCustomsStatusButton">Update Customs Status</button>
        </div>
    </section>


    <script src="cargo.js"></script>
</body>

</html>