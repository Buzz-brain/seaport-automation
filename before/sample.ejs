<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Cargo Management Platform</title>
    <link rel="stylesheet" href="styles.css">
    <script src="https://cdn.socket.io/4.5.0/socket.io.min.js"></script>
</head>
<body>
    <!-- Home Page -->
    <div id="home">
        <header>
            <h1>Welcome to the Admin Cargo Management Platform</h1>
            <p>Manage and track cargo allocations seamlessly.</p>
            <button onclick="window.location.href='login.html'">Admin Login</button>
        </header>
    </div>

    <!-- Login Page -->
    <div id="login">
        <h2>Admin Login</h2>
        <form id="loginForm">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
            <button type="submit">Login</button>
        </form>
        <div id="loginError"></div>
    </div>

    <!-- Dashboard -->
    <div id="dashboard">
        <header>
            <h1>Dashboard</h1>
            <button onclick="logout()">Logout</button>
        </header>
        <section>
            <h2>Cargo Overview</h2>
            <div id="cargoList"></div>
        </section>
    </div>

    <!-- Add Cargo Page -->
    <div id="addCargo">
        <h2>Add New Cargo</h2>
        <form id="addCargoForm">
            <label for="cargoId">Cargo ID:</label>
            <input type="text" id="cargoId" name="cargoId" required>

            <label for="content">Content:</label>
            <input type="text" id="content" name="content" required>

            <label for="size">Size:</label>
            <input type="number" id="size" name="size" required>

            <label for="storageCondition">Storage Condition:</label>
            <input type="text" id="storageCondition" name="storageCondition" required>

            <label for="currentLocation">Current Location:</label>
            <input type="text" id="currentLocation" name="currentLocation" required>

            <button type="submit">Add Cargo</button>
        </form>
    </div>

    <!-- Allocate Storage Page -->
    <div id="allocateStorage">
        <h2>Allocate Storage</h2>
        <form id="allocateForm">
            <label for="cargoId">Cargo ID:</label>
            <input type="text" id="cargoId" name="cargoId" required>
            <button type="submit">Allocate</button>
        </form>
        <div id="allocationResult"></div>
    </div>

    <!-- Search Page -->
    <div id="search">
        <h2>Search Cargo</h2>
        <form id="searchForm">
            <label for="cargoId">Search by ID:</label>
            <input type="text" id="searchCargoId" name="cargoId">

            <label for="content">Search by Content:</label>
            <input type="text" id="searchContent" name="content">

            <button type="submit">Search</button>
        </form>
        <div id="searchResults"></div>
    </div>

    <script src="scripts.js"></script>
</body>
</html>
